# ---------------------------------------------------
# Laravel & PHP
# ---------------------------------------------------
/vendor
/node_modules
/public/storage           # Ignore symlinked storage folder
/storage/*.key            # Ignore encryption keys
/storage/framework/*      # Cache, sessions, views
/storage/logs/*           # Log files
/storage/app/public/*     # Uploaded public files
/storage/app/private/*    # Uploaded private files (optional)
/storage/app/docusign/*.key  # DocuSign RSA keys (IMPORTANT!)
!/storage/framework/.gitignore
!/storage/logs/.gitignore
!/storage/app/public/.gitignore
!/storage/app/private/.gitignore
/bootstrap/cache/*.php    # Compiled bootstrap files

